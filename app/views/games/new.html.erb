<%= content_for :game_info, @info %>
<% content_for :game_content do %>
    <div class="container">
        <h5>Please Select items from your bag</h5>
            <%= form_with(url: games_path) do |form| %>
                <% Bag.find(@game.bag_id).items.each do |item| %>
                    <div class="form-check">
                        <%= form.check_box item.id, class: "form-check-input"%>
                        <label class="form-check-label" for="defaultCheck1">
                            <%= item.to_string%>
                        </label>
                    </div>
                <% end %>
                <div class="actions">
                    <%= form.submit "Load Cup", class: "btn btn-light" %>
                </div>
            <% end %>
    </div>
<% end %>
<%= render template: "layouts/application" %>